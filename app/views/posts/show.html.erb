

<div class="post">
  <div class="post-content">
  <div class="post-title">
      <h3><%=@post.title%> by <%=@post.user.name%></h3>
    </div>
    <h4>Comments: <%=@post.comments_counter%>, Likes: <%=@post.likes_counter%></h4>
    <p><%=@post.text%></p>
  </div>
  <div class="post--comments">
    <h3>Comments</h3>
    <%@post.comments.each do |comment|%>
      <div class="comment">
        <p><span><%=comment.user.name%></span>:&nbsp;<%=comment.text%></p>
        <p></p>
      </div>
    <%end%>

    <%=form_with :url => user_post_likes_path(@user, @post), :method => :post, :class => 'new-like' do |f|%>
      <%= f.button nil, class: "button_green" do %>
        <%= icon('fa-solid', 'thumbs-up', class: 'like')%>
      <% end %>
    <%end%>

    <%= link_to icon('fa-solid', 'comment', class: 'like'), new_user_post_comment_path(@user, @post) %>

  <% if can? :destroy, @post %>
  <%= button_to 'Delete',
    user_post_path(user_id: post.author.id, id: post.id),
    method: :delete,
    data: {confirm: 'Are you sure?'},
    class: 'btn btn-like'
  %>
  <% end %>
  </div>